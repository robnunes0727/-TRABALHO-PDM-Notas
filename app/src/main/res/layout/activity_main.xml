<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="LabelFor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtRA" />

    <EditText
        android:id="@+id/edtRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/txtRA"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtRA"
        android:text="@string/txtNome" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/txtNome"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/txtCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtCurso"
        android:layout_below="@id/edtNome"/>

    <Spinner
        android:id="@+id/cmbCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCurso"
        android:ems="10" />

    <TextView
        android:id="@+id/txtTurma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTurma"
        android:layout_below="@id/cmbCurso" />

    <EditText
        android:id="@+id/edtTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textPersonName"
        android:layout_below="@id/txtTurma"
        android:maxLength="2"
        android:importantForAutofill="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTurma"
        android:gravity="center" >

        <Button
            android:id="@+id/btnDesistir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/btnDesistir"
            android:onClick="btnDesistir" />

        <Button
            android:id="@+id/btnAvancar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/strAvancar"
            android:onClick="btnAvancar" />
    </LinearLayout>
</RelativeLayout>